<%- include('./partials/header.ejs') %>

<div class="card m-2 p-2 ">
    <h1 class="card-header col-auto">Login!</h1>
    <div class="card-body">
        <form method="POST">
            <fieldset class="col-auto">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="email">User email</label>
                    <input class="form-control col-sm-2" type="email" name="email" id="email" />
                    <%- include('./partials/error.ejs', { errors: errors, attribute: 'error'}) %>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="password">Password</label>
                    <input class="form-control col-sm-2" type="password" name="password" id="password" />
                </div>
                <div class="row">
                    <div class="col-sm-2"></div>
                    <input class="btn btn-primary col-sm-2" type="submit" value="Log in!" />
                </div>
            </fieldset>
        </form>
        <p class="card-footer col-auto mt-2">Have not registered yet? No problem! You can find registration form <a href="/auth/registration">here</a>.</p>
    </div>
</div>

<%- include('./partials/footer.ejs') %>